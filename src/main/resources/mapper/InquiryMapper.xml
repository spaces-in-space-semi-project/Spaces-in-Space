<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.space.spacesinspace.user.member.model.dao.MemberMapper">
    
    <resultMap id="InquiryResultMap" type="com.space.spacesinspace.common.dto.InquiryDTO">
        <id property="code" column="inquiry_code"/>
        <result property="code" column="member_code"/>
        <result property="title" column="inquiry_title"/>
        <result property="detail" column="inquiry_detail"/>
        <result property="date" column="inquiry_date"/>
        <result property="editDate" column="inquiry_edit_date"/>
    </resultMap>

    <select id="findAllInquiry" resultMap="InquiryResultMap">
        SELECT
            inquiry_code,
            member_code,
            inquiry_title,
            inquiry_detail,
            inquiry_date,
            inquiry_edit_date
        FROM
            inquiry_tbl
        ORDER BY
            inquiry_code
    </select>

    <select id="findInquiryByCode" parameterType="int" resultMap="InquiryResultMap">
        SELECT
            inquiry_code,
            member_code,
            inquiry_title,
            inquiry_detail,
            inquiry_date,
            inquiry_edit_date
        FROM
            tbl_menu
        WHERE
            inquiry_code = #{code}
    </select>
</mapper>