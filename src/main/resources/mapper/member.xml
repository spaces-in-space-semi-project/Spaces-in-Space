<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.space.spacesinspace.user.member.model.dao.MemberMapper">

    <resultMap id="authenticatedMember" type="com.space.spacesinspace.common.dto.MemberDTO">
        <id property="memberCode" column="member_code"/>
        <result property="memberId" column="member_id"/>
        <result property="memberPw" column="member_pw"/>
        <result property="memberName" column="member_name"/>
        <result property="memberEmail" column="member_email"/>
        <result property="memberPhone" column="member_phone"/>
        <result property="memberAddress" column="member_address"/>
        <result property="memberRole" column="member_role"/>
        <result property="memberDeleteYn" column="member_delete_yn"/>
    </resultMap>

    <insert id="regist" parameterType="com.space.spacesinspace.user.member.model.dto.SignupDTO">
        INSERT INTO member_tbl
        (
            member_id,
            member_pw,
            member_name,
            member_email,
            member_phone,
            member_address,
            member_role,
            member_delete_yn
        )
        VALUES
        (   #{memberId},
            #{memberPw},
            #{memberName},
            #{memberEmail},
            #{memberPhone},
            #{memberAddress},
            'USER',
            'N'
        )
    </insert>

    <select id="findByMemberId" resultMap="authenticatedMember">
        SELECT
            member_code,
            member_id,
            member_pw,
            member_name,
            member_email,
            member_phone,
            member_address,
            member_role,
            member_delete_yn
        FROM member_tbl
        WHERE member_id = #{memberId}
    </select>
</mapper>